
type Query {
  bankAccounts: [BankAccount!]!
  #todos: [Todo!]!
}


type Mutation {
  createBankAccount(application: BankApplication!): createBankAccountResponse!
}

type createBankAccountResponse{
  code: Int!
  success: Boolean!
  message: String!
}


input PersonInput {
  name: String!
  age: Int
}

type Person {
  name: String!
  age: Int
}

input BankApplication{
  applicant: PersonInput!
  openingDeposit: Float
}

type BankAccount {
  owner: Person!
  balance: Float!
  id: ID!
  

}
